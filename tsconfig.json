{
  "extends": "@tsconfig/strictest/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "sourceMap": true,
    "paths": {
      "@handlers/*": ["./handlers/*"],
      "@services/*": ["./services/*"],
      "@stores/*": ["./stores/*"],
      "@utils/*": ["./utils/*"],
      "@types": ["./types"]
    }
  },
  "exclude": ["coverage", "dist"]
}
